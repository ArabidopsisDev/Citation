<UserControl
	x:Class="Citation.View.Controls.ArticleItem"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="150"
	d:DesignWidth="500"
	mc:Ignorable="d">

	<Border
		Name="RootBorder"
		Margin="0,0,0,15"
		Padding="0"
		Background="White"
		BorderBrush="#E0E0E0"
		BorderThickness="1"
		CornerRadius="6">

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Border
				Grid.Column="0"
				Width="60"
				Background="#0078D7"
				CornerRadius="6,0,0,6">
				<Viewbox>
					<TextBlock
						x:Name="IndexText"
						Margin="10"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontFamily="Arial"
						FontWeight="Bold"
						Foreground="White"
						Text="1" />
				</Viewbox>
			</Border>

			<Grid Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<Grid Grid.Row="0" Margin="15,10,15,5">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<StackPanel>
						<TextBlock
							FontFamily="Calibri"
							FontSize="18"
							FontWeight="SemiBold"
							Text="{Binding Message.Title[0]}"
							TextWrapping="Wrap" />
						<TextBlock
							Margin="0,5,0,0"
							FontFamily="Calibri"
							FontSize="14"
							Foreground="#666666"
							Text="{Binding Message.Container[0]}" />
					</StackPanel>

					<!--  按钮  -->
					<TextBlock
						x:Name="ExpandButton"
						Grid.Column="1"
						Margin="5,0,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						FontSize="14"
						MouseLeftButtonDown="ExpandButton_MouseLeftButtonDown"
						Text="▼" />
				</Grid>

				<StackPanel
					x:Name="DetailPanel"
					Grid.Row="1"
					Margin="15,5,15,15"
					Visibility="Collapsed">
					<TextBlock
						Margin="0,0,0,5"
						FontWeight="Bold"
						Text="Authors:" />
					<TextBlock
						Margin="0,0,0,10"
						FontFamily="Calibri"
						Text="{Binding Message.AuthorString}"
						TextWrapping="Wrap" />

					<TextBlock
						Margin="0,0,0,5"
						FontWeight="Bold"
						Text="Abstract:" />
					<Border
						Padding="10"
						Background="#FAFAFA"
						BorderBrush="#E0E0E0"
						BorderThickness="1"
						CornerRadius="4">
						<ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
							<TextBlock
								FontFamily="Calibri"
								Text="{Binding Message.Abstract}"
								TextWrapping="Wrap" />
						</ScrollViewer>
					</Border>
				</StackPanel>
			</Grid>
		</Grid>
	</Border>
</UserControl>