<Window
	x:Class="Citation.View.VerifyWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Citation.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="项目授权验证"
	Width="750"
	Height="530"
	Background="#FFF5F5F5"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Window.Resources>
		<Style x:Key="PrimaryButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF0078D7" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="16,8" />
			<Setter Property="Margin" Value="0,10,0,0" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="FontWeight" Value="SemiBold" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="Height" Value="36" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF106EBE" />
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#FF005A9E" />
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="SecondaryButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="Foreground" Value="#FF666666" />
			<Setter Property="BorderBrush" Value="#FFCCCCCC" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="Padding" Value="16,8" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="FontWeight" Value="SemiBold" />
			<Setter Property="Height" Value="36" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FFF0F0F0" />
					<Setter Property="BorderBrush" Value="#FF999999" />
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#FFE0E0E0" />
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="LightPasswordBox" TargetType="PasswordBox">
			<Setter Property="Background" Value="White" />
			<Setter Property="Foreground" Value="#FF333333" />
			<Setter Property="BorderBrush" Value="#FFCCCCCC" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="Padding" Value="10" />
			<Setter Property="Margin" Value="0,8,0,0" />
			<Setter Property="Height" Value="36" />
		</Style>

		<Style x:Key="LightTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="White" />
			<Setter Property="Foreground" Value="#FF333333" />
			<Setter Property="BorderBrush" Value="#FFCCCCCC" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="Padding" Value="10" />
			<Setter Property="Margin" Value="0,8,0,0" />
			<Setter Property="Height" Value="36" />
			<Setter Property="IsReadOnly" Value="True" />
		</Style>

		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FF333333" />
			<Setter Property="Margin" Value="0,0,0,4" />
		</Style>

		<Style x:Key="SectionBorder" TargetType="Border">
			<Setter Property="BorderBrush" Value="#FFE0E0E0" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="CornerRadius" Value="5" />
			<Setter Property="Padding" Value="20" />
			<Setter Property="Margin" Value="15" />
			<Setter Property="Background" Value="White" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						BlurRadius="10"
						Opacity="0.3"
						ShadowDepth="0"
						Color="#FFCCCCCC" />
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="BrowseButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFF5F5F5" />
			<Setter Property="Foreground" Value="#FF333333" />
			<Setter Property="BorderBrush" Value="#FFCCCCCC" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="Padding" Value="8,0" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="FontWeight" Value="Normal" />
			<Setter Property="Height" Value="36" />
			<Setter Property="Width" Value="80" />
			<Setter Property="Margin" Value="8,8,0,0" />
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FFEEEEEE" />
					<Setter Property="BorderBrush" Value="#FF999999" />
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Background" Value="#FFE0E0E0" />
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<StackPanel
			Grid.Row="0"
			Margin="0,20,0,30"
			HorizontalAlignment="Center">
			<Image
				Width="64"
				Height="64"
				RenderOptions.BitmapScalingMode="HighQuality"
				Source="pack://application:,,,/Citation;component/Images/lock.png" />
			<TextBlock
				Margin="0,15,0,5"
				HorizontalAlignment="Center"
				FontSize="20"
				FontWeight="Bold"
				Foreground="#FF333333"
				Text="项目已锁定" />
			<TextBlock
				HorizontalAlignment="Center"
				Text="请选择以下任一方式完成授权验证"
				TextAlignment="Center" />
		</StackPanel>

		<!--  授权选项区域  -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="10" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Border Grid.Column="0" Style="{StaticResource SectionBorder}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<TextBlock
						Grid.Row="0"
						Margin="0,0,0,10"
						FontSize="16"
						FontWeight="Bold"
						Foreground="#FF0078D7"
						Text="密码授权" />
					<TextBlock
						Grid.Row="1"
						Text="请输入您的授权密码："
						TextWrapping="Wrap" />
					<PasswordBox
						x:Name="PasswordBox"
						Grid.Row="2"
						Style="{StaticResource LightPasswordBox}" />

					<Button
						x:Name="PasswordAuthButton"
						Grid.Row="3"
						VerticalAlignment="Bottom"
						Click="PasswordAuthButton_Click"
						Content="验证密码"
						Style="{StaticResource PrimaryButtonStyle}" />
				</Grid>
			</Border>

			<Rectangle Grid.Column="1" Fill="Transparent" />

			<Border Grid.Column="2" Style="{StaticResource SectionBorder}">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<TextBlock
						Grid.Row="0"
						Margin="0,0,0,10"
						FontSize="16"
						FontWeight="Bold"
						Foreground="#FF0078D7"
						Text="文件授权" />
					<TextBlock
						Grid.Row="1"
						Text="请选择授权文件："
						TextWrapping="Wrap" />

					<Grid Grid.Row="2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<TextBox
							x:Name="FilePathTextBox"
							Grid.Column="0"
							Style="{StaticResource LightTextBox}" />
						<Button
							Grid.Column="1"
							Click="BrowseButton_Click"
							Content="浏览"
							Style="{StaticResource BrowseButtonStyle}" />
					</Grid>

					<TextBlock
						Grid.Row="3"
						Margin="0,8,0,0"
						FontSize="11"
						FontStyle="Italic"
						Foreground="#FF666666"
						Text="支持的文件格式: .clc," />

					<Button
						x:Name="FileAuthButton"
						Grid.Row="4"
						VerticalAlignment="Bottom"
						Click="FileAuthButton_Click"
						Content="载入授权"
						Style="{StaticResource PrimaryButtonStyle}" />
				</Grid>
			</Border>
		</Grid>

		<Border
			Grid.Row="2"
			Padding="15,12"
			Background="#FFEEEEEE"
			BorderBrush="#FFE0E0E0"
			BorderThickness="0,1,0,0">
			<Grid>
				<TextBlock
					x:Name="StatusText"
					VerticalAlignment="Center"
					Foreground="#FF666666"
					Text="请选择一种验证方式完成授权" />
				<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
					<Button
						Margin="0,0,10,0"
						Click="CancelButton_Click"
						Content="取消"
						Style="{StaticResource SecondaryButtonStyle}" />
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>