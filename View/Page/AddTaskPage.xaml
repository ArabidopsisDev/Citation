<UserControl
    x:Class="Citation.View.Page.AddTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,30,0,20"
            HorizontalAlignment="Center"
            FontSize="30"
            FontWeight="DemiBold"
            Text="{x:Static loc:Resources.AddTaskPage_PageCapital}" />

        <Border
            Grid.Row="1"
            Width="600"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Border
                Padding="25"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            Margin="0,5,0,2"
                            FontWeight="Bold"
                            Text="{x:Static loc:Resources.AddTaskPage_TaskName}" />
                        <TextBox
                            Margin="0,0,0,15"
                            Padding="0,5"
                            BorderBrush="LightGray"
                            BorderThickness="0,0,0,1"
                            FontFamily="Calibri"
                            FontSize="16"
                            Text="{Binding Task.Name}" />

                        <TextBlock
                            Margin="0,5,0,2"
                            FontWeight="Bold"
                            Text="{x:Static loc:Resources.AddTaskPage_TaskDescription}" />
                        <TextBox
                            MinHeight="100"
                            Margin="0,0,0,15"
                            Padding="5"
                            AcceptsReturn="True"
                            Background="#FAFAFA"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            FontFamily="Calibri"
                            FontSize="16"
                            Text="{Binding Task.Description}"
                            TextWrapping="Wrap" />

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,5,0,2"
                                    FontWeight="Bold"
                                    Text="{x:Static loc:Resources.AddTaskPage_TaskStartTime}" />
                                <xctk:DateTimePicker
                                    Padding="0,5"
                                    BorderBrush="LightGray"
                                    BorderThickness="0,0,0,1"
                                    FontFamily="Calibri"
                                    FontSize="16"
                                    Format="Custom"
                                    FormatString="yyyy/M/dd HH:mm:ss"
                                    Value="{Binding Task.StartTime}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock
                                    Margin="0,5,0,2"
                                    FontWeight="Bold"
                                    Text="{x:Static loc:Resources.AddTaskPage_TaskEndTime}" />
                                <xctk:DateTimePicker
                                    Padding="0,5"
                                    BorderBrush="LightGray"
                                    BorderThickness="0,0,0,1"
                                    FontFamily="Calibri"
                                    FontSize="16"
                                    Format="Custom"
                                    FormatString="yyyy/M/dd HH:mm:ss"
                                    Value="{Binding Task.EndTime}" />
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox
                                Grid.Column="0"
                                Margin="0,5,0,15"
                                Content="{x:Static loc:Resources.AddTaskPage_StartAlert}"
                                FontFamily="Calibri"
                                FontSize="16"
                                IsChecked="{Binding Task.StartRemind}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="0,5,0,15"
                                Content="{x:Static loc:Resources.AddTaskPage_EndAlert}"
                                FontFamily="Calibri"
                                FontSize="16"
                                IsChecked="{Binding Task.EndRemind}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="40"
                Margin="0,0,20,0"
                Background="#0078D7"
                BorderThickness="0"
                Click="SaveButton_Click"
                Content="{x:Static loc:Resources.Public_Save}"
                FontSize="16"
                FontWeight="Medium"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="20">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Width="120"
                Height="40"
                Background="LightGray"
                BorderThickness="0"
                Click="CancelButton_Click"
                Content="{x:Static loc:Resources.Public_Clear}"
                FontSize="16"
                FontWeight="Medium"
                Foreground="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="20">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>