<!--  SettingPage.xaml  -->
<UserControl
    x:Class="Citation.View.Page.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="SettingPage_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,15,0,10" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="270"
                        Opacity="0.1"
                        ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock
                FontSize="22"
                FontWeight="Bold"
                Foreground="#1A5E20">
                <Run Text="{x:Static loc:Resources.SettingPage_PageCapitalLeft}" />
                <Run FontWeight="SemiBold" Text="{x:Static loc:Resources.SettingPage_PageCapitalRight}" />
            </TextBlock>

            <Border Margin="0,15,0,0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{x:Static loc:Resources.SettingPage_Formatter}" />

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Text="{x:Static loc:Resources.SettingPage_FormatStyle}" />

                        <ComboBox
                            x:Name="FormatComboBox"
                            Grid.Column="1"
                            Height="35"
                            DisplayMemberPath="FormatName"
                            SelectedIndex="0"
                            SelectedValuePath="FormatName">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="8,5" />
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </Grid>

                    <TextBlock
                        Margin="0,15,0,0"
                        Foreground="#555555"
                        Text="{x:Static loc:Resources.SettingPage_FormatInstruction}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!--  Reserved  -->
            <Border Margin="0,20,0,0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="{x:Static loc:Resources.SettingPage_OtherSettings}" />

                    <TextBlock
                        FontStyle="Italic"
                        Foreground="#777777"
                        Text="{x:Static loc:Resources.SettingPage_OtherInstruction}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>