<!--  SettingPage.xaml  -->
<UserControl
	x:Class="Citation.View.Page.SettingPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Citation.View.Page"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Loaded="SettingPage_Loaded"
	mc:Ignorable="d">

	<UserControl.Resources>
		<Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="FontWeight" Value="Bold" />
			<Setter Property="Margin" Value="0,15,0,10" />
			<Setter Property="Foreground" Value="#333333" />
		</Style>

		<Style x:Key="CardStyle" TargetType="Border">
			<Setter Property="Background" Value="White" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="#E0E0E0" />
			<Setter Property="Padding" Value="15" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						BlurRadius="10"
						Direction="270"
						Opacity="0.1"
						ShadowDepth="2" />
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Margin="20">
			<TextBlock
				FontSize="22"
				FontWeight="Bold"
				Foreground="#1A5E20">
				<Run Text="项目 " />
				<Run FontWeight="SemiBold" Text="设置项" />
			</TextBlock>

			<!--  格式化器选择卡片  -->
			<Border Margin="0,15,0,0" Style="{StaticResource CardStyle}">
				<StackPanel>
					<TextBlock Style="{StaticResource SectionHeaderStyle}" Text="引用格式化选项" />

					<Grid Margin="0,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<TextBlock
							Grid.Column="0"
							Margin="0,0,10,0"
							VerticalAlignment="Center"
							Text="格式化样式：" />

						<ComboBox
							x:Name="FormatComboBox"
							Grid.Column="1"
							Height="35"
							DisplayMemberPath="FormatName"
							SelectedIndex="0"
							SelectedValuePath="FormatName">
							<ComboBox.ItemContainerStyle>
								<Style TargetType="ComboBoxItem">
									<Setter Property="Padding" Value="8,5" />
								</Style>
							</ComboBox.ItemContainerStyle>
						</ComboBox>
					</Grid>

					<TextBlock
						Margin="0,15,0,0"
						Foreground="#555555"
						Text="选择文献引用时使用的格式化样式，更改将在下次引用时生效。"
						TextWrapping="Wrap" />
				</StackPanel>
			</Border>

			<!--  预留扩展区域  -->
			<Border Margin="0,20,0,0" Style="{StaticResource CardStyle}">
				<StackPanel>
					<TextBlock Style="{StaticResource SectionHeaderStyle}" Text="其他设置" />

					<TextBlock
						FontStyle="Italic"
						Foreground="#777777"
						Text="更多设置选项将在后续版本中提供..." />
				</StackPanel>
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>