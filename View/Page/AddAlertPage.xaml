<UserControl
    x:Class="Citation.View.Page.AddAlertPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,25,0,15"
            HorizontalAlignment="Center"
            FontSize="26"
            FontWeight="DemiBold"
            Text="{x:Static loc:Resources.AddAlertPage_PageCapital}" />

        <Border
            Grid.Row="1"
            Width="500"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Border
                Padding="25"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="15">
                <StackPanel>
                    <TextBlock
                        Margin="0,5,0,3"
                        FontWeight="Bold"
                        Text="{x:Static loc:Resources.AddAlertPage_AlertCapital}" />
                    <TextBox
                        Margin="0,0,0,15"
                        Padding="0,5"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1"
                        FontFamily="Calibri"
                        FontSize="16"
                        Text="{Binding Alert.Title, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                    <TextBlock
                        Margin="0,5,0,3"
                        FontWeight="Bold"
                        Text="{x:Static loc:Resources.AddAlertPage_AlertDescription}" />
                    <TextBox
                        MinHeight="80"
                        Margin="0,0,0,15"
                        Padding="5"
                        AcceptsReturn="True"
                        Background="#FAFAFA"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        FontFamily="Calibri"
                        FontSize="16"
                        Text="{Binding Alert.Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,5,0,3"
                        FontWeight="Bold"
                        Text="{x:Static loc:Resources.AddAlertPage_AlertTime}" />
                    <xctk:DateTimePicker
                        Margin="0,0,0,20"
                        Padding="0,5"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1"
                        FontFamily="Calibri"
                        FontSize="16"
                        Format="Custom"
                        FormatString="yyyy/M/dd HH:mm:ss"
                        Value="{Binding Alert.OccurTime, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
            </Border>
        </Border>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="40"
                Margin="10,0"
                Background="#0078D7"
                BorderThickness="0"
                Click="SaveButton_Click"
                Content="{x:Static loc:Resources.Public_Save}"
                FontSize="16"
                FontWeight="Medium"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="20">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Width="120"
                Height="40"
                Margin="10,0"
                Background="LightGray"
                BorderThickness="0"
                Click="CancelButton_Click"
                Content="{x:Static loc:Resources.Public_Clear}"
                FontSize="16"
                FontWeight="Medium"
                Foreground="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="20">
                            <ContentPresenter
                                x:Name="contentPresenter"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>