<UserControl
    x:Class="Citation.View.Page.ImportFailurePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FFF0F0F0"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="15,10"
            Background="Gray"
            CornerRadius="5">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="SimHei"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="{x:Static loc:Resources.ImportFailurePage_PageCapital}" />
        </Border>

        <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
            <StackPanel>
                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontFamily="Times New Roman"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="1." />
                        <TextBlock
                            Grid.Column="1"
                            FontFamily="Times New Roman, SimSun"
                            FontSize="14"
                            Text="{x:Static loc:Resources.ImportFailurePage_Alert1}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontFamily="Times New Roman"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="2." />
                        <TextBlock
                            Grid.Column="1"
                            FontFamily="Times New Roman, SimSun"
                            FontSize="14"
                            Text="{x:Static loc:Resources.ImportFailurePage_Alert2}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontFamily="Times New Roman"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="3." />
                        <TextBlock
                            Grid.Column="1"
                            FontFamily="Times New Roman,SimSun"
                            FontSize="14"
                            Text="{x:Static loc:Resources.ImportFailurePage_Alert3}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,0,0,15"
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontFamily="Times New Roman"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="4." />
                        <TextBlock
                            Grid.Column="1"
                            FontFamily="SimSun"
                            FontSize="14"
                            Text="{x:Static loc:Resources.ImportFailurePage_Alert4}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <Border
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            FontFamily="Times New Roman"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="5." />
                        <TextBlock
                            Grid.Column="1"
                            FontFamily="SimSun"
                            FontSize="14"
                            Text="{x:Static loc:Resources.ImportFailurePage_Alert5}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border
            Grid.Row="2"
            Margin="0,20,0,0"
            Padding="10"
            Background="#FFE0E0E0"
            CornerRadius="5">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="Times New Roman,SimSun"
                FontSize="14"
                FontStyle="Italic"
                Text="{x:Static loc:Resources.ImportFailurePage_Buttom}" />
        </Border>
    </Grid>
</UserControl>