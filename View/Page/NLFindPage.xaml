<UserControl
    x:Class="Citation.View.Page.NLFindPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,75,0,40"
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="DemiBold"
                Text="{x:Static loc:Resources.FindNLPage_PageCapital}" />

            <TextBlock
                Grid.Row="0"
                Margin="0,285,0,40"
                HorizontalAlignment="Center"
                FontFamily="方正书宋简体"
                FontSize="15"
                FontWeight="DemiBold"
                Text="{Binding Status, Mode=TwoWay}" />

            <Border
                Grid.Row="0"
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Border
                    Height="50"
                    Padding="15,5,15,5"
                    Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="25">
                    <Grid>
                        <TextBlock
                            x:Name="PlaceholderText"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Foreground="Gray"
                            Text="{x:Static loc:Resources.NLFindPage_InputLink}" />
                        <TextBox
                            Name="PromptInput"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="Calibri"
                            FontSize="16"
                            TextChanged="TextBox_TextChanged" />
                    </Grid>
                </Border>
            </Border>

            <StackPanel
                Grid.Row="0"
                Margin="0,180,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <RadioButton
                    x:Name="CnkiRadioButton"
                    Margin="0,0,30,0"
                    Content="知网"
                    FontFamily="Calibri,SimHei"
                    FontSize="14"
                    FontWeight="Medium"
                    GroupName="DataSource"
                    IsChecked="True">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Border
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,8,0"
                                    Background="White"
                                    BorderBrush="#0078D7"
                                    BorderThickness="1.5"
                                    CornerRadius="9">
                                    <Ellipse
                                        x:Name="checkMark"
                                        Width="10"
                                        Height="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="#0078D7"
                                        Opacity="0" />
                                </Border>
                                <ContentPresenter VerticalAlignment="Center" TextElement.FontWeight="{TemplateBinding FontWeight}" />
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="checkMark" Property="Opacity" Value="1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                <RadioButton
                    x:Name="ScienceDirectRadioButton"
                    Content="Science Direct"
                    FontFamily="Calibri"
                    FontSize="14"
                    FontWeight="Medium"
                    GroupName="DataSource">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Border
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,8,0"
                                    Background="White"
                                    BorderBrush="#0078D7"
                                    BorderThickness="1.5"
                                    CornerRadius="9">
                                    <Ellipse
                                        x:Name="checkMark"
                                        Width="10"
                                        Height="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="#0078D7"
                                        Opacity="0" />
                                </Border>
                                <ContentPresenter VerticalAlignment="Center" TextElement.FontWeight="{TemplateBinding FontWeight}" />
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="checkMark" Property="Opacity" Value="1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Width="120"
                    Height="40"
                    Background="#0078D7"
                    BorderThickness="0"
                    Click="Confirm_Click"
                    Content="{x:Static loc:Resources.Public_Confirm}"
                    FontFamily="Calibri,SimHei"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="20">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Width="120"
                    Height="40"
                    Margin="50,0,0,0"
                    Background="Gray"
                    BorderThickness="0"
                    Content="{x:Static loc:Resources.Public_Clear}"
                    FontFamily="Calibri,SimHei"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="20">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>