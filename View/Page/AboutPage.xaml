<UserControl
    x:Class="Citation.View.Page.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Citation.Properties"
    xmlns:local="clr-namespace:Citation.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,5" />
        </Style>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.2"
            ShadowDepth="3" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Border
            Margin="20"
            Background="White"
            CornerRadius="10"
            Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="60"
                        Height="60"
                        Margin="0,0,15,0"
                        Source="pack://application:,,,/Citation;component/Images/pjm.png" />
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="#FF0066CC"
                            Text="Citation" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            Text="{x:Static loc:Resources.AboutPage_ShortDescription}" />
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FF0066CC"
                            Text="{x:Static loc:Resources.AboutPage_DevelopmentGroup}" />

                        <TextBlock FontWeight="SemiBold" Text="{x:Static loc:Resources.AboutPage_MainDeveloper}" />
                        <TextBlock FontWeight="SemiBold" Text="{x:Static loc:Resources.AboutPage_DevelopmentOrganize}" />

                        <TextBlock
                            Margin="0,20,0,0"
                            FontWeight="SemiBold"
                            Text="{x:Static loc:Resources.AboutPage_Contact}" />
                        <TextBlock Text="{x:Static loc:Resources.AboutPage_Contact_Emali}" />

                        <TextBlock
                            Margin="0,20,0,0"
                            FontWeight="SemiBold"
                            Text="{x:Static loc:Resources.AboutPage_Contact_Address}" />
                        <TextBlock Text="{x:Static loc:Resources.AboutPage_Contact_AddressDetail}" TextWrapping="Wrap" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FF0066CC"
                            Text="{x:Static loc:Resources.AboutPage_Contact_SoftwareInfo}" />

                        <TextBlock Name="VersionLabel" Text="{x:Static loc:Resources.AboutPage_Contact_Version}" />
                        <TextBlock Text="{x:Static loc:Resources.AboutPage_Contact_Copyright}" TextWrapping="Wrap" />

                        <TextBlock
                            Margin="0,20,0,0"
                            FontWeight="SemiBold"
                            Text="{x:Static loc:Resources.AboutPage_Thanks}" />
                        <TextBlock
                            AllowDrop="True"
                            FontFamily="Arial,Simhei"
                            FontSize="14"
                            Text="Northeast Monsoon、筱冷妖刃（山东农业大学）  &#x000A;KangLives（西安电子科技大学） &#x000A;元可可YoCoco（西北工业大学）"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <Border
                    Grid.Row="2"
                    Margin="0,20,0,0"
                    Padding="10"
                    Background="#FFEEEEEE"
                    CornerRadius="5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Text="{x:Static loc:Resources.AboutPage_Alert}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>