<UserControl x:Class="Citation.View.Page.CitationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid Background="#F5F5F5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" 
                HorizontalAlignment="Center" Margin="0,75,0,40" FontWeight="DemiBold" FontSize="30">
			添加新的引用</TextBlock>

		<TextBlock Grid.Row="0" 
		           HorizontalAlignment="Center" Margin="0,285,0,40" FontWeight="DemiBold" FontSize="15" Text="{Binding Status, Mode=TwoWay}" FontFamily="方正书宋简体"/>

		<Border Grid.Row="0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="600">
			<Border CornerRadius="25" 
                    BorderThickness="1" 
                    BorderBrush="LightGray" 
                    Background="White" 
                    Padding="15,5,15,5" 
                    Height="50">
				<Grid>
					<TextBlock x:Name="PlaceholderText" 
                             Text="请输入文章链接..." 
                             Foreground="Gray" 
                             FontStyle="Italic" 
                             Margin="5,0,0,0" 
                             VerticalAlignment="Center"/>
					<TextBox Background="Transparent" 
							 Text="{Binding CiteUri}"
                             BorderThickness="0" 
                             FontSize="16" 
                             FontFamily="Arial" 
                             VerticalContentAlignment="Center"
                             TextChanged="TextBox_TextChanged"/>
				</Grid>
			</Border>
		</Border>

		<StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top">
			<Button Content="Cite" 
                   Width="120" 
                   Height="40" 
                   FontSize="16" 
                   FontWeight="Medium" 
                   Background="#0078D7" 
                   Foreground="White"
					Click="Cite_Click"
                   BorderThickness="0">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20" 
                                BorderThickness="0">
							<ContentPresenter x:Name="contentPresenter" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>