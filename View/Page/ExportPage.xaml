<UserControl
	x:Class="Citation.View.Page.ExportPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:Citation.Model.Convert"
	xmlns:controls="clr-namespace:Citation.View.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="600"
	d:DesignWidth="800"
	mc:Ignorable="d"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <c:AuthorConverter x:Key="AuthorsConverter" />
        <c:DateConverter x:Key="DateConverter" />

        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="0,0,20,0" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Background" Value="White" />
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="Foreground" Value="#333333" />
        </Style>

        <Style x:Key="SegmentedButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#0078D7" />
            <Setter Property="BorderBrush" Value="#0078D7" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
							x:Name="border"
							Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
							CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#0078D7" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D7" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="#0078D7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
			Grid.Row="0"
			Padding="20,15"
			Background="White"
			BorderBrush="#E0E0E0"
			BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Foreground="#333333"
					Text="筛选条件：" />

                <ComboBox
					x:Name="FolderFilterComboBox"
					Style="{StaticResource FilterComboBoxStyle}"
					DisplayMemberPath="."
					ItemsSource="{Binding Folders}"
					SelectionChanged="FilterComboBox_SelectionChanged"
					ToolTip="按课题筛选">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <ComboBox
					x:Name="PressFilterComboBox"
					Style="{StaticResource FilterComboBoxStyle}"
					DisplayMemberPath="."
					ItemsSource="{Binding Presses}"
					SelectionChanged="FilterComboBox_SelectionChanged"
					ToolTip="按期刊筛选">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>

                <Button
					Style="{StaticResource FilterButtonStyle}"
					Click="ClearFilterButton_Click"
					Content="清除筛选"
					ToolTip="清除所有筛选条件" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="20">
            <ItemsControl x:Name="ArticlesContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ArticleItem Index="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border
			Grid.Row="2"
			Padding="20,10"
			Background="#F5F5F5"
			BorderBrush="#E0E0E0"
			BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Border
					Margin="0,0,20,0"
					BorderBrush="#0078D7"
					BorderThickness="1"
					CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
							x:Name="MarkdownButton"
							Width="100"
							Height="40"
							BorderThickness="1,1,0,1"
							Content="Markdown"
							GroupName="ExportFormat"
							IsChecked="True"
							Style="{StaticResource SegmentedButtonStyle}" />
                        <RadioButton
							x:Name="LatexButton"
							Width="100"
							Height="40"
							BorderThickness="0,1,1,1"
							Content="LaTeX"
							GroupName="ExportFormat"
							Style="{StaticResource SegmentedButtonStyle}" />
                    </StackPanel>
                </Border>

                <Button
					Width="120"
					Height="40"
					Margin="40,0,20,0"
					Background="#0078D7"
					BorderThickness="0"
					Click="ExportButton_Click"
					Content="导出引用"
					FontSize="16"
					FontWeight="Medium"
					Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
								x:Name="border"
								Background="{TemplateBinding Background}"
								BorderThickness="0"
								CornerRadius="20">
                                <ContentPresenter
									x:Name="contentPresenter"
									HorizontalAlignment="Center"
									VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>