<Window
	x:Class="Citation.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Citation"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Arabidopsis Citation"
	Width="1050"
	Height="600"
	mc:Ignorable="d">
	<Grid>
		<DockPanel>
			<Menu VerticalAlignment="Top" DockPanel.Dock="Top">
				<MenuItem
					FontFamily="SimHei"
					FontSize="18"
					Header="项目">
					<MenuItem
						Click="NewProject_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="新建" />
					<MenuItem
						Click="OpenProject_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="打开" />
					<MenuItem
						Click="ExitSoftware_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="退出" />
				</MenuItem>
				<MenuItem
					FontFamily="SimHei"
					FontSize="18"
					Header="引用">
					<MenuItem
						Click="AddCitation_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="添加引用" />
					<MenuItem
						Click="ViewCitation_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="查看引用" />
					<MenuItem
						Click="ExportCitation_Click"
						FontFamily="SimHei"
						FontSize="15"
						Header="导出引用" />
				</MenuItem>
			</Menu>

			<Border
				Height="45"
				Background="Green"
				DockPanel.Dock="Top">
				<StackPanel Orientation="Horizontal">
					<Image Margin="5" Source="pack://application:,,,/Citation;component/Images/citation.png" />
					<TextBlock
						Margin="20,5,5,5"
						VerticalAlignment="Center"
						FontFamily="Consolas"
						FontSize="26"
						Foreground="White">
						Welcome To Citation! (Version Dev_tfa1016.stable)
					</TextBlock>
				</StackPanel>
			</Border>

			<ToolBar
				VerticalAlignment="Bottom"
				d:IsLocked="True"
				DockPanel.Dock="Bottom">
				<Label
					Content="项目名称:"
					FontSize="14"
					FontWeight="DemiBold" />
				<Label
					Name="ProjectName"
					Content="{Binding Name}"
					FontSize="14"
					FontWeight="DemiBold" />
			</ToolBar>
			<Frame Name="MainFrame" />
		</DockPanel>
	</Grid>
</Window>