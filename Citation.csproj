<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <LangVersion>preview</LangVersion>
    <Platforms>AnyCPU;x64;x86;ARM32</Platforms>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    <Copyright>Copyright Arabidipsis. All right reserved.</Copyright>
    <PackageReadmeFile>manual-cn.md</PackageReadmeFile>
    <SignAssembly>False</SignAssembly>
    <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
    <AssemblyVersion>3.0</AssemblyVersion>
    <FileVersion>3.0</FileVersion>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|ARM32'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|ARM32'">
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="config.xml" />
    <None Remove="dbtemplate.accdb" />
    <None Remove="Images\alert.mp3" />
    <None Remove="Images\alert.wav" />
    <None Remove="Images\align-center.png" />
    <None Remove="Images\align-left.png" />
    <None Remove="Images\align-right.png" />
    <None Remove="Images\article.png" />
    <None Remove="Images\citation.png" />
    <None Remove="Images\folder.png" />
    <None Remove="Images\lock.png" />
    <None Remove="Images\misc.wav" />
    <None Remove="Images\pjm.png" />
    <None Remove="Images\warning.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.7.25104.5739" />
    <PackageReference Include="System.Data.OleDb" Version="9.0.8" />
    <PackageReference Include="System.Management" Version="9.0.8" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="config.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="dbtemplate.accdb">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="logo.ico" />
    <Resource Include="Images\alert.wav" />
    <Resource Include="Images\align-center.png" />
    <Resource Include="Images\align-left.png" />
    <Resource Include="Images\align-right.png" />
    <Resource Include="Images\article.png" />
    <Resource Include="Images\lock.png" />
    <Resource Include="Images\logo.png" />
    <Resource Include="Images\citation.png" />
    <Resource Include="Images\folder.png" />
    <Resource Include="Images\misc.wav" />
    <Resource Include="Images\pjm.png" />
    <Resource Include="Images\warning.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Docs\manual-cn.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
