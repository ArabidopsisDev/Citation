<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <LangVersion>preview</LangVersion>
    <Platforms>AnyCPU;x64;x86;ARM32</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="dbtemplate.accdb" />
    <None Remove="Images\article.png" />
    <None Remove="Images\citation.png" />
    <None Remove="Images\folder.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.OleDb" Version="9.0.8" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="dbtemplate.accdb">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Resource Include="Images\article.png" />
    <Resource Include="Images\logo.png" />
    <Resource Include="Images\citation.png" />
    <Resource Include="Images\folder.png" />
  </ItemGroup>

</Project>
